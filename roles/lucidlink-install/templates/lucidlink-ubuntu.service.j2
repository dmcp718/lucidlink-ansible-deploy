[Unit]
Description=LucidLink Daemon
After=network.target

[Service]
Type=simple
User=lucidlink
Group=lucidlink
EnvironmentFile=/client/lucid/lucidlink-service-vars.txt
LoadCredential=ll-password-1:/client/lucid/ll-password-1.cred
ExecStart=/usr/bin/lucid2 --instance 501 daemon --fs ${FILESPACE} --user ${FSUSER} --mount-point ${MOUNTPOINT} --config-path /client/lucid --fuse-allow-other
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 